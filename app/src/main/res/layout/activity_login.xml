<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/view_margin_10"
    tools:context="com.venkatesh.businessoffers.BusinessRegistration">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/view_margin">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin_10"
            android:layout_marginTop="@dimen/view_margin_10"
            android:orientation="vertical">

            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/et_username"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:imeActionLabel="@string/action_sign_in_short"
                android:inputType="text"
                android:singleLine="true"
                app:floatingLabel="highlight" />

            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/email"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                app:floatingLabel="highlight" />

            <com.venkatesh.businessoffers.intlphoneinput.IntlPhoneInput
                android:id="@+id/my_phone_input"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin_10" />

            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/et_keyword"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/keywords"
                android:imeActionLabel="@string/action_sign_in_short"
                android:inputType="text"
                android:singleLine="true"
                app:floatingLabel="highlight" />

            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/et_category"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/category"
                app:floatingLabel="highlight" />


            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/et_service"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/service"
                android:imeActionLabel="@string/action_sign_in_short"
                android:inputType="text"
                android:singleLine="true"
                app:floatingLabel="highlight" />


            <com.venkatesh.businessoffers.customViews.MaterialEditText
                android:id="@+id/et_address"
                style="@style/margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:imeActionLabel="@string/action_sign_in_short"
                android:inputType="text"
                android:singleLine="true"
                app:floatingLabel="highlight" />

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:text="@string/action_sign_in"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:theme="@style/MyButton" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
