<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.venkatesh.foodapp.food.AddItemToCart"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dum Biryani"
        android:textSize="18sp"
        android:layout_margin="12dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"

        >

        <ImageButton
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_shape_bg"
            android:src="@drawable/ic_remove"
            android:text="@string/address" />

        <TextView
            android:id="@+id/item_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/iv_minus"
            android:gravity="center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textSize="24sp" />


        <ImageButton
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_count"
            android:background="@drawable/circle_shape_bg"
            android:src="@drawable/ic_action_add"
            android:text="@string/address"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cartviewBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"

        >

        <TextView
            android:id="@+id/tv_cart_items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add 1 item to cart"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/tv_cart_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_white"
            android:layout_alignBaseline="@+id/tv_cart_items_count"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>




</RelativeLayout>
